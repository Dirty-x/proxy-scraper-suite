# Environment Configuration Template

# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ============================================
# Scraper Configuration
# ============================================

# Number of concurrent requests (1-100)
CONCURRENCY=8

# Request timeout in seconds (1-300)
TIMEOUT=120

# Number of retries for failed requests (0-10)
RETRIES=2

# Maximum requests per crawl (optional, for testing)
# MAX_REQUESTS=50

# ============================================
# Testing Configuration
# ============================================

# Enable/disable proxy testing
RUN_TESTS=true

# Number of test worker threads (1-50)
TEST_WORKERS=5

# Test timeout in seconds (1-60)
TEST_TIMEOUT=20

# ============================================
# Storage Configuration
# ============================================

# Key-value store name (alphanumeric, hyphens, underscores only)
KV_STORE_NAME=default

# Dataset name
DATASET_NAME=default

# Enable caching
CACHE_ENABLED=false

# Cache TTL in seconds
CACHE_TTL=3600

# ============================================
# Logging Configuration
# ============================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Enable debug mode
DEBUG=false

# ============================================
# Proxy Configuration
# ============================================

# Use Cloud proxy
USE_CLOUD_PROXY=true

# Cloud proxy groups (comma-separated)
# CLOUD_PROXY_GROUPS=RESIDENTIAL,DATACENTER

# Custom proxy URLs (comma-separated)
# PROXY_URLS=http://proxy1.com:8080,http://proxy2.com:8080


